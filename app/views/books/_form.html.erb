
<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @book.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :author_id %><br>
    <%= form.text_field :author_id %><br>
    <% @book.errors.full_messages_for(:author_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :publisher_id %><br>
    <%= form.text_field :publisher_id %><br>
    <% @book.errors.full_messages_for(:bookshop_id).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>
    <div>
    <%= form.label :bookshop_id %><br>
    <%= form.text_field :bookshop_id %><br>
    <% @book.errors.full_messages_for(:bookshop_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

